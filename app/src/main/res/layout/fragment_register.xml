<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layoutDescription="@xml/fragment_register_scene"
    tools:context=".ui.login.RegisterFragment">

    <View
        android:id="@+id/ivTitleLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/login_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleLogin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRegisterFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvInfoAnotherRegister"
                style="@style/style_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/string_info_another_register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivFacebookRegister" />

            <ImageView
                android:id="@+id/ivFacebookRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_another_login_color"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:src="@drawable/ic_icons_facebook"
                app:layout_constraintEnd_toStartOf="@+id/ivLineRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivGoogleRegister"
                app:layout_constraintTop_toTopOf="@+id/ivGoogleRegister" />

            <ImageView
                android:id="@+id/ivGoogleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_another_login_color"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:src="@drawable/ic_icons_google"
                app:layout_constraintEnd_toStartOf="@+id/ivFacebookRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivLineRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_another_login_color"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:src="@drawable/ic_icons_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivFacebookRegister"
                app:layout_constraintTop_toTopOf="@+id/ivFacebookRegister" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etEmailRegisterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toBottomOf="@+id/tvInfoAnotherRegister"
                app:startIconContentDescription="@string/hint_email_id"
                app:startIconDrawable="@drawable/ic_icon_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmailRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_email_id"
                    android:inputType="textEmailAddress"
                    android:paddingTop="12dp"
                    android:paddingBottom="24dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPasswordRegisterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toBottomOf="@+id/etEmailRegisterLayout"
                app:startIconContentDescription="@string/hint_email_id"
                app:startIconDrawable="@drawable/ic_icon_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPasswordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingTop="12dp"
                    android:paddingBottom="24dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etFullNameRegisterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toBottomOf="@+id/etPasswordRegisterLayout"
                app:startIconContentDescription="@string/hint_email_id"
                app:startIconDrawable="@drawable/ic_icon_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFullNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_full_name"
                    android:inputType="textPersonName"
                    android:paddingTop="12dp"
                    android:paddingBottom="24dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPhoneNumberRegisterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toBottomOf="@+id/etFullNameRegisterLayout"
                app:startIconContentDescription="@string/hint_email_id"
                app:startIconDrawable="@drawable/ic_icon_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumberRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_phone_number"
                    android:inputType="textEmailAddress"
                    android:paddingTop="12dp"
                    android:paddingBottom="24dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnRegister"
                style="@style/style_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:text="@string/string_register"
                app:layout_constraintBottom_toTopOf="@+id/tvInfoRegister"
                app:layout_constraintEnd_toEndOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toBottomOf="@+id/etPhoneNumberRegisterLayout"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvInfoRegister"
                style="@style/style_question_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/string_info_login"
                app:layout_constraintBottom_toTopOf="@+id/guidelineMarginBottomRegister"
                app:layout_constraintEnd_toStartOf="@+id/tvToLogin"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/guidelineMarginLeftRegister"
                app:layout_constraintTop_toTopOf="@+id/guidelineMarginBottomRegisterBlock" />

            <TextView
                android:id="@+id/tvToLogin"
                style="@style/style_highlight_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/string_login"
                app:layout_constraintBottom_toBottomOf="@+id/tvInfoRegister"
                app:layout_constraintEnd_toStartOf="@+id/guidelineMarginRightRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvInfoRegister"
                app:layout_constraintTop_toTopOf="@+id/tvInfoRegister" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMarginLeftRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMarginRightRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMarginBottomRegisterBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMarginBottomRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</androidx.constraintlayout.motion.widget.MotionLayout>