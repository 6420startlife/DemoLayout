<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="style_btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg_color</item>
        <item name="android:textSize">@dimen/dimen_textSize_btn</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="style_more_info">
        <item name="android:textColor">@color/bali_hai</item>
        <item name="android:textSize">@dimen/dimen_textSize_info_another_login</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="style_text_error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/dimen_textSize_text_error</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_highlight_text">
        <item name="android:textColor">@color/blue_ribbon</item>
        <item name="android:textSize">@dimen/dimen_textSize_highlight_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_title">
        <item name="android:textColor">@color/plantation</item>
        <item name="android:textSize">@dimen/dimen_textSize_title_login</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="style_question_text">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/style_btn</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/bali_hai</item>
        <item name="colorError">@color/red</item>
        <item name="editTextStyle">@style/style_input_text</item>
        <item name="android:maxWidth">@dimen/custom_max_width_input_text</item>
        <item name="android:minWidth">@dimen/custom_min_width_input_text</item>
    </style>

    <style name="style_input_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_textSize_text_input</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:maxLines">1</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>